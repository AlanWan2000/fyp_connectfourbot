<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hk.hku.cs.fyp_connectfourbot">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.front" />
    <uses-feature android:name="android.hardware.camera.front.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fyp_connectfourbot">
        <activity android:name=".ReminderActivity"
            android:label="Instructions"></activity>
        <activity android:name=".ScoreBoardActivity"
            android:label="Score Board"></activity>
        <activity android:name=".GameEndActivity"
            android:screenOrientation="portrait"
            android:label="Game Ends" />
        <activity
            android:name=".SelectActivity"
            android:screenOrientation="portrait"
            android:label="Select First Player" />
        <activity
            android:name=".DrawingActivity"
            android:screenOrientation="portrait"
            android:label="Drawing Mode" />
        <activity
            android:name=".BuildingActivity"
            android:screenOrientation="portrait"
            android:label="Building Mode" />
        <activity
            android:name=".ControllerActivity"
            android:screenOrientation="portrait"
            android:label="Arm Controller" />
        <activity
            android:name=".ManualActivity"
            android:screenOrientation="portrait"
            android:label="Manual Mode Activity" />
        <activity
            android:name=".AutoActivity"
            android:screenOrientation="portrait"
            android:label="Finding GameBoard..." />
        <activity
            android:name=".BoardActivity"
            android:screenOrientation="portrait"
            android:label="Let's Play" />
        <activity
            android:name="com.makerlab.ui.BluetoothDevListActivity"
            android:screenOrientation="portrait"
            android:label="Scanning Bluetooth Devices" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.Fyp_connectfourbot.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>